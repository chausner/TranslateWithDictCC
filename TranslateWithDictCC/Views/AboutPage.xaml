            <TextBlock Text="Copyright © Christoph Hausner 2016" Margin="0,0,0,8" />
            <HyperlinkButton x:Uid="AboutPage_PrivacyStatementLink" Content="Privacy Statement" NavigateUri="http://www.dict.cc/?s=about:&amp;l=e" Margin="0,0,0,16" />
            <Button x:Uid="AboutPage_GiveFeedbackButton" Content="Give feedback" Margin="0,0,0,32" Click="Button_Click" />            
